            {
                "id": "addPython",
                "label": "%ctx.addPython%"
            }
        ],
        "configuration": [
            {
                "title": "Add Items",
                "properties": {
                    "add-items.contextMenu.custom": {
                        "type": "boolean",
                        "default": false,
                        "description": "Show Custom context menu shortcut, for custom templates"
                    },
                    "add-items.contextMenu.shortcut.CSharp": {
                        "type": "string",
                        "enum": [
                            "Never",
                            "Always",
                            "Dynamic"
                        ],
                        "enumDescriptions": [
                            "Shortcuts will never be shown",
                            "Shortcuts will always be shown",
                            "Shortcuts will be shown based on the current workspace"
                        ],
                        "default": "Dynamic",
                        "description": "Decide when to show C# context menu shortcut."
                    },
                    "add-items.contextMenu.shortcut.Razor": {
                        "type": "string",
                        "enum": [
                            "Never",
                            "Always",
                            "Dynamic"
                        ],
                        "default": "Dynamic",
                        "description": "Decide when to show C# Razor context menu shortcut.",
                        "enumDescriptions": [
                            "Shortcuts will never be shown",
                            "Shortcuts will always be shown",
                            "Shortcuts will be shown based on the current workspace"
                        ]
                    },
                    "add-items.contextMenu.shortcut.Typescript": {
                        "type": "string",
                        "enum": [
                            "Never",
                            "Always",
                            "Dynamic"
                        ],
                        "default": "Dynamic",
                        "description": "Decide when to show TypeScript context menu shortcut.",
                        "enumDescriptions": [
                            "Shortcuts will never be shown",
                            "Shortcuts will always be shown",
                            "Shortcuts will be shown based on the current workspace"
                        ]
                    },
                    "add-items.contextMenu.shortcut.Python": {
                        "type": "string",
                        "enum": [
                            "Never",
                            "Always",
                            "Dynamic"
                        ],
                        "default": "Dynamic",
                        "description": "Decide when to show Python context menu shortcut.",
                        "enumDescriptions": [
                            "Shortcuts will never be shown",
                            "Shortcuts will always be shown",
                            "Shortcuts will be shown based on the current workspace"
                        ]
                    },
                    "add-items.normalizeNamespaces": {
                        "type": "string",
                        "default": "None",
                        "enum": [
                            "None",
                            "Remove",
                            "Replace with underscore"
                        ],
                        "enumDescriptions": [
                            "Do not normalize namespaces",
                            "Remove namespaces",
                            "Replace dots with underscores"
                        ],
                        "markdownDescription": "Decide what to do with special characters in a namespace. In case you have an invalid folder structure. For example, if you have a folder named `Money$$$`, the dollar signs (`$$$`) are invalid characters for a namespace. This setting will decide what to do with those characters. \n\n**Note**: White spaces will always be removed, regardless of this setting."
                    },
                    "add-items.c#.addUsings": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "markdownDescription": "Always add the following usings to the top of the file, for example you can add:\n\n`using System.Text.Json;`\n\n`using System.Text.Json.Serialization;`\n\nAnd those lines will be added to every C# file you create from now on.",
                        "default": []
                    }
                }
            }
        ]
